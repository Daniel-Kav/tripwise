# API settings
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_API_VERSION=v1

# Map settings
REACT_APP_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Feature flags
